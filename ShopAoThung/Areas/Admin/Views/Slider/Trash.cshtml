@model IEnumerable<ShopAoThung.Models.Mslider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Thùng rác ảnh bìa</h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Admin">Home</a></li>
                <li class="breadcrumb-item active m-0">Thùng rác ảnh bìa</li>
            </ol>
        </div>
    </div>
</div>

<section class=" ">
    <div class=" bg-white card  p-3">
        <div class="row justify-content-end">
            <div class="col-md-3">
                <div class=" pt-1 ml-5 float-right mr-3">
                    <a class="text-white btn-sm btn-danger " href="~/admin/Slider">Thoát</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9  w-100 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-12 p-3">

                <table class="table px-3 table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Hình ảnh</th>
                            <th>tên slider</th>
                            <th>position</th>
                            <th>Ngày Tạo</th>
                            <th>Chức Năng</th>
                            <th>ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td><img width="20px" src="~/public/images/bg-images/@Html.DisplayFor(modelItem => item.img)"></td>
                                <td><a class=" font-weight-bold card-link " href=""> @Html.DisplayFor(modelItem => item.name)</a></td>
                                <td width="15%">  @Html.DisplayFor(modelItem => item.position)</td>
                                <td>@Html.DisplayFor(modelItem => item.created_at)</td>
                                <td>
                                    <a class="btn btn-sm btn-light text-success border" href="@Url.Action("Retrash", "Slider", new { id = item.ID })"> <i class="fas fa-undo"></i></a>
                                    <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("deleteTrash", "Slider", new { id = item.ID })">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                                <td class="text-cam">@Html.DisplayFor(modelItem => item.ID)</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>

<script>
    $("#slider").addClass("active");
</script>
